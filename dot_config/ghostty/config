theme = Catppuccin Mocha
font-size = 18
window-save-state = always
background-opacity = 0.93
background-blur-radius = 20
scrollback-limit = 100000
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
copy-on-select = true
confirm-close-surface = false
quick-terminal-animation-duration = 0.1
window-decoration = false
cursor-style = bar
adjust-cursor-thickness = 2

# Keybinds
## Splits
keybind = ctrl+l=goto_split:next
keybind = ctrl+r=new_split:right
keybind = ctrl+d=new_split:down
keybind = ctrl+right=resize_split:right,20
keybind = ctrl+left=resize_split:left,20
keybind = ctrl+up=resize_split:up,20
keybind = ctrl+down=resize_split:down,20
## Quick Terminal, Only works on macOS
keybind = global:super+ctrl+z=toggle_quick_terminal
## Misc
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+d=toggle_window_decorations
## Tabs
keybind = ctrl+e=new_tab
keybind = ctrl+n=next_tab
keybind = ctrl+p=previous_tab
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9
keybind = ctrl+0=goto_tab:10
